{
    "name": "delivr-api",
    "module": "index.ts",
    "type": "module",
    "private": true,
    "scripts": {
        "typecheck": "tsc -p ./tsconfig/tsconfig.typecheck.json && echo 'Typecheck passed!'",
        "test": "bun test",
        "dev": "bun run --watch src/index.ts",
        "db:generate": "bun scripts/db-utils && drizzle-kit generate --config=drizzle.config.ts",
        "db:migrate": "bun scripts/db-utils && drizzle-kit migrate --config=drizzle.config.ts",
        "db:push": "echo 'Use db:generate db:migrate instead' && exit 1 && bun scripts/db-utils && drizzle-kit push --config=drizzle.config.ts",
        "start": "bun run scripts/entrypoint.ts"
    },
    "devDependencies": {
        "@cleverjs/cli": "^1.1.8",
        "@hey-api/openapi-ts": "0.89.2",
        "@types/bun": "^1.3.5",
        "@types/jsdom": "^27.0.0",
        "@types/mailparser": "^3.4.6",
        "@types/nodemailer": "^7.0.4",
        "big.js": "^7.0.1",
        "drizzle-kit": "^0.31.8",
        "imap-handler": "^0.1.12"
    },
    "peerDependencies": {
        "typescript": "^5.9.3"
    },
    "dependencies": {
        "@cleverjs/utils": "^1.1.9",
        "@hono/standard-validator": "^0.2.1",
        "@libsql/client": "^0.15.15",
        "@scalar/hono-api-reference": "^0.9.30",
        "cron": "^4.4.0",
        "dompurify": "^3.3.1",
        "drizzle-orm": "^0.45.1",
        "drizzle-zod": "^0.8.3",
        "hono": "^4.11.3",
        "hono-openapi": "^1.1.2",
        "imapflow": "^1.2.4",
        "jsdom": "^27.4.0",
        "mailparser": "^3.9.1",
        "nodemailer": "^7.0.12",
        "zod": "^4.3.4"
    }
}
